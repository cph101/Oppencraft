name: Check PR Naming

on:
  pull_request:
    paths:
      - 'src/**' # Adjust the path based on your project structure

jobs:
  check-naming:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Set up JDK
      uses: actions/setup-java@v2
      with:
        distribution: 'adopt'
        java-version: '11'

    - name: Run file name check
      run: |
        files=$(find src/ -name '*.java' | grep -Pv '^[A-Z][^A-Z]*\.java$')
        if [ -n "$files" ]; then
          echo "1 or more files do not fulfill our naming requirements:"
          echo "$files"
          echo "::set-output name=files::$files"
        fi

    - name: Post comment on PR
      if: ${{ steps.check-naming.outputs.files }}
      uses: actions/github-script@v7
      with:
        github-token: ${{ secrets.GITHUB_TOKEN }}
        script: |
          const files = `${process.env.FILES}`;
          const comment = `1 or more files do not fulfill our naming requirements:\n${files}`;
          const { owner, repo } = context.repo;
          const { number } = context.issue;
          await github.issues.createComment({
            owner,
            repo,
            issue_number: number,
            body: comment,
          });
